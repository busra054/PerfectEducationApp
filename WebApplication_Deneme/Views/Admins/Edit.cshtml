@model WebApplication_Domain.Entities.Admin

@{
    ViewData["Title"] = "Admin Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Düzenle</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="AdminName" class="form-label">Kullanıcı Adı</label>
        <input asp-for="AdminName" class="form-control" />
        <span asp-validation-for="AdminName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AdminPassword" class="form-label">Şifre</label>
        <input asp-for="AdminPassword" type="password" class="form-control" />
        <span asp-validation-for="AdminPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri Dön</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
