@model WebApplication_Domain.Entities.Admin

@{
    ViewData["Title"] = "Admin Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Sil</h1>

<h3>Bu admini silmek istediğinize emin misiniz?</h3>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.AdminName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.AdminName)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Vazgeç</a>
</form>
